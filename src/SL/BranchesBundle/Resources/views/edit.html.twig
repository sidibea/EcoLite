{# src/OC/PlatformBundle/Resources/views/Advert/index.html.twig #}

{% extends "SLInstallBundle::layout.html.twig" %}

{% block title %}
    {{ information.nom }} : {{ 'now'|date('Y') }} - {{ ('now'|date('Y'))+1 }}
{% endblock %}

{% block content %}
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Fichier
            <small>Niveaux</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Acceuil</a></li>
            <li class="#">Fichier</li><li class="active">Niveaux</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Table des Niveaux</h3>
                    </div><!-- /.box-header -->
                    <div class="box-body"><hr>
                        <div class="cModal" id="modal1">
                            <div>
                                <h3 class="box-title">Modification du niveau [{{ niveaux.nom }}]</h3>
                                {{ form_start(form) }}

                                {# Les erreurs générales du formulaire. #}
                                {{ form_errors(form) }}

                                <div class="form-group">
                                    {# Génération du label. #}
                                    {{ form_label(form.code, "Code du Niveau") }}

                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.code) }}
                                    {# Génération de l'input. #}
                                    {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                                </div>
                                <div class="form-group">
                                    {{ form_label(form.nom, "Nom du Niveau") }}

                                    {# Affichage des erreurs pour ce champ précis. #}
                                    {{ form_errors(form.nom) }}
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-phone"></i>
                                        </div>
                                        {# Génération de l'input. #}
                                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder' : 'Nom du niveau ' }}) }}
                                    </div>
                                </div>
                                <div class="box-footer">
                                    <a href="{{ path('sl_niveaux_homepage') }}" class="btn btn-app">
                                        <i class="fa fa-cab"></i> Annuler
                                    </a>

                                    <button type="submit"  class="btn btn-app pull-right">
                                        <i class="fa fa-save"></i> Enregistrer
                                    </button>

                                    {# Génération automatique des champs pas encore écrits.
                                       Dans cet exemple, ce serait le champ CSRF (géré automatiquement par Symfony !)
                                       et tous les champs cachés (type « hidden »). #}
                                    {{ form_rest(form) }}

                                    {# Fermeture de la balise <form> du formulaire HTML #}
                                    {{ form_end(form) }}

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>




{% endblock %}

{% block script %}
    <!-- page script -->
    <script type="text/javascript">
        $(function () {
            $('#niveaux').dataTable({
                "bPaginate": true,
                "bLengthChange": false,
                "bFilter": false,
                "bSort": true,
                "bInfo": true,
                "bAutoWidth": false
            });
        });
    </script>

{% endblock %}